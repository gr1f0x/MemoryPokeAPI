{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "import/extensions": "off",
    "no-alert": "off",
    "no-restricted-syntax": "off",
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.config.js" // Permite las dependencias de desarrollo en el archivos de configuraci√≥n como vite.config.js, webpack.config.js, etc.
        ]
      }
    ]
  }
}
